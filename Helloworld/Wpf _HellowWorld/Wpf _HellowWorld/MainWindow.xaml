          <TextBox x:Name="TextBox_show" HorizontalAlignment="Left" Height="57" Margin="16,26,0,0" TextWrapping="Wrap" Text="TextBox" VerticalAlignment="Top" Width="637" Grid.ColumnSpan="4" Grid.Column="1"/>
